#==== set cursor
seat seat0 xcursor_theme XCursor-Pro-Everforest-orange 32

# Thin borders:
smart_borders off

#==== corners
corner_radius 15
smart_corner_radius on

#==== shadows
shadows on
shadows_on_csd on
shadow_blur_radius 10
shadow_color #0000007F

#==== blur
blur on
blur_xray on
blur_radius 5
blur_passes 3

